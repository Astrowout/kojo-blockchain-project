{
  "name": "hardhat-project",
  "version": "1.0.0",
  "license": "MIT",
  "description": "",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test test/*.ts --network localhost",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write .",
    "coverage": "hardhat coverage --solcoverjs ./.solcover.ts",
    "fuzzing": "docker run -it --rm -v $PWD:/src trailofbits/eth-security-toolbox",
    "clean": "hardhat clean",
    "start": "hardhat node",
    "deploy:goerli": "hardhat run scripts/deploy.ts --network goerli",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network mumbai",
    "deploy-oracle:testnet": "hardhat run scripts/deploy-oracle.ts --network mumbai",
    "deploy-keeper:testnet": "hardhat run scripts/deploy-keeper.ts --network mumbai",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "verify:testnet": "hardhat verify 0xB71533F3C032504a2dB732EAd1B8e5b827c852d5 --network mumbai",
    "upgrade:testnet": "hardhat run scripts/upgrade.ts --network mumbai"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/contracts-upgradeable": "^4.6.0",
    "@openzeppelin/hardhat-upgrades": "^1.17.0",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.1",
    "@types/node": "^12.20.51",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "5.6.5",
    "hardhat": "2.9.8",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "ts-node": "^10.7.0",
    "typechain": "^5.2.0",
    "typescript": "^4.6.4"
  }
